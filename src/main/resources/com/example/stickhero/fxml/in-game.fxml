            <Label alignment="CENTER" layoutX="-1.0" layoutY="60.0" prefHeight="44.0" prefWidth="335.0" text="GAME OVER!" textAlignment="CENTER">
                <font>
                    <Font name="Roboto Bold" size="36.0" />
                </font>
            </Label>
            <Label layoutX="147.0" layoutY="131.0" text="SCORE">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label fx:id="prevScore" layoutX="146.0" layoutY="147.0" text="54">
                <font>
                    <Font size="40.0" />
                </font>
            </Label>
            <Label layoutX="153.0" layoutY="211.0" text="BEST">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label fx:id="highScore" layoutX="135.0" layoutY="229.0" text="0">
                <font>
                    <Font size="40.0" />
                </font>
            </Label>
            <Button layoutX="104.0" layoutY="496.0" mnemonicParsing="false" onAction="#onHomeButtonClicked" prefHeight="54.0" prefWidth="58.0" style="-fx-background-color: rgba(0, 0, 0, 0);">
