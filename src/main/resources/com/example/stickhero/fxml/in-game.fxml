                    <ImageView fitHeight="35.0" fitWidth="54.0">
                        <image>
                            <Image url="@../images/Cherry.png" />
                        </image>
                    </ImageView>
                </graphic>
                <font>
                    <Font name="Roboto" size="24.0" />
                </font>
            </Button>
            <Button layoutX="170.0" layoutY="499.0" mnemonicParsing="false" onAction="#onRestartButtonClicked" prefHeight="54.0" prefWidth="54.0" style="-fx-background-color: rgba(0, 0, 0, 0);">
