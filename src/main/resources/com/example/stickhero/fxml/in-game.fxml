                    <ImageView fitHeight="65.0" fitWidth="65.0">
                        <image>
                            <Image url="@../images/Restart.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </AnchorPane>
        <AnchorPane fx:id="inGameScreen">
            <Button layoutX="6.0" layoutY="12.0" maxHeight="-Infinity" maxWidth="24.0" minHeight="-Infinity" minWidth="24.0"
